{% extends 'base.html.twig' %}

{% block title %}Licence index{% endblock %}

{% block body %}
    <h1>Licence index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>LicenceNo</th>
                <th>SurfaceLocation</th>
                <th>WellName</th>
                <th>LaheeClass</th>
                <th>DrillingOperation</th>
                <th>Strike</th>
                <th>WellPurpose</th>
                <th>MineralRights</th>
                <th>WellType</th>
                <th>GroundElevation</th>
                <th>Substance</th>
                <th>SpudDate</th>
                <th>RigRelease</th>
                <th>FinishedDrillingDate</th>
                <th>Ground</th>
                <th>CutOrFill</th>
                <th>KbGround</th>
                <th>AfeId</th>
                <th>AfeEstimate</th>
                <th>TotalCost</th>
                <th>FirstDailyReportDate</th>
                <th>LastDailyReportDate</th>
                <th>Deleted</th>
                <th>DeletedAt</th>
                <th>Jurisdiction</th>
                <th>TerminatingZone</th>
                <th>LatitudeUtm</th>
                <th>LongitudeUtm</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for licence in licences %}
            <tr>
                <td>{{ licence.id }}</td>
                <td>{{ licence.licenceNo }}</td>
                <td>{{ licence.surfaceLocation }}</td>
                <td>{{ licence.wellName }}</td>
                <td>{{ licence.laheeClass }}</td>
                <td>{{ licence.drillingOperation }}</td>
                <td>{{ licence.strike }}</td>
                <td>{{ licence.wellPurpose }}</td>
                <td>{{ licence.mineralRights }}</td>
                <td>{{ licence.wellType }}</td>
                <td>{{ licence.groundElevation }}</td>
                <td>{{ licence.substance }}</td>
                <td>{{ licence.spudDate ? licence.spudDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ licence.rigRelease ? licence.rigRelease|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ licence.finishedDrillingDate ? licence.finishedDrillingDate|date('Y-m-d') : '' }}</td>
                <td>{{ licence.ground }}</td>
                <td>{{ licence.cutOrFill }}</td>
                <td>{{ licence.kbGround }}</td>
                <td>{{ licence.afeId }}</td>
                <td>{{ licence.afeEstimate }}</td>
                <td>{{ licence.totalCost }}</td>
                <td>{{ licence.firstDailyReportDate ? licence.firstDailyReportDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ licence.lastDailyReportDate ? licence.lastDailyReportDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ licence.deleted ? 'Yes' : 'No' }}</td>
                <td>{{ licence.deletedAt ? licence.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ licence.jurisdiction }}</td>
                <td>{{ licence.terminatingZone }}</td>
                <td>{{ licence.latitudeUtm }}</td>
                <td>{{ licence.longitudeUtm }}</td>
                <td>
                    <a href="{{ path('r_v_licence_show', {'id': licence.id}) }}">show</a>
                    <a href="{{ path('r_v_licence_edit', {'id': licence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="30">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('r_v_licence_new') }}">Create new</a>
{% endblock %}